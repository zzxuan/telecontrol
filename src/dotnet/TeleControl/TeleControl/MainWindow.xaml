<Window x:Class="TeleControl.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150" />
            <ColumnDefinition Width="405*" />
        </Grid.ColumnDefinitions>
        <Image Name="image1" Stretch="Fill" Grid.Column="1" Margin="6,0,0,0" />
        <ListBox Name="listBox1" SelectionChanged="listBox1_SelectionChanged"/>
        <GridSplitter Grid.Column="1" HorizontalAlignment="Left" Name="gridSplitter1" Width="5" Margin="0,0,0,0" />
    </Grid>
</Window>
